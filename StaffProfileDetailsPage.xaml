<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Project2.StaffProfileDetailsPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <StackLayout>
        <Label Text="{Binding Name}" FontSize="24" />
        <Label Text="{Binding Phone}" FontSize="18" />
        <Label Text="{Binding DepartmentId}" FontSize="18" />
        <Label Text="{Binding Address}" FontSize="18" />

        <Button Text="Update" Clicked="OnUpdateClicked" />
        <Button Text="Back" Clicked="OnBackClicked" />
    </StackLayout>
</ContentPage>
