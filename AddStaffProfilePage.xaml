<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Project2.AddStaffProfilePage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <StackLayout>
        <Entry Placeholder="Name" x:Name="nameEntry" />
        <Entry Placeholder="Phone" x:Name="phoneEntry" />
        <Picker Title="Department" x:Name="departmentPicker" />
        <Entry Placeholder="Address" x:Name="addressEntry" />

        <Button Text="Save" Clicked="OnSaveClicked" />
        <Button Text="Cancel" Clicked="OnCancelClicked" />
    </StackLayout>
</ContentPage>
